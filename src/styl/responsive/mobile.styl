$gutter = 10px

$margin-micro = ($gutter / 2)
$margin-tiny = $gutter
$margin-small = ($gutter * 1.5)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 4)
$margin-large = ($gutter * 6)
$margin-extra = ($gutter * 8)

$font-size-tiny = 10px
$font-size-small = 12px
$font-size-basic = 14px
$font-size-mid = 14px
$font-size-large = 36px

grid-maker(false, $gutter, s)

.container
  width: calc('100vw - ' + $gutter)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large, $margin-extra)

font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

// ******************************************************

// BASIC

p
  max-width: 380px

// ******************************************************

// HEADER

#header
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 200

// ******************************************************

// PROJECT LIST

.project-list-title
  line-height: .8

.project-list-type
  margin-left: .5em

// ******************************************************

// PROJECT

#project
  position: fixed
  width: 100vw
  height: 100vh
  top: 0
  left: 0
  z-index: 100

#project-wrapper
  position: absolute
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  overflow-y: scroll

.project-image-row
  font-size: 0

.frame-mobile
  max-width: 240px

make-browser-frames(12px, 25px, $margin-micro)
