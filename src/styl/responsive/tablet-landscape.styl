@media screen and (min-width: 1024px)

  $gutter = 30px

  $margin-micro = ($gutter / 2)
  $margin-tiny = $gutter
  $margin-small = ($gutter * 1.5)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 4)
  $margin-large = ($gutter * 6)
  $margin-extra = ($gutter * 8)

  $font-size-tiny = 14px
  $font-size-small = 18px
  $font-size-basic = 24px
  $font-size-mid = 36px
  $font-size-large = 64px

  grid-maker(false, $gutter, l)

  .container
    width: calc('100vw - ' + $gutter)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large, $margin-extra)

  font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

  .desktop-only
    display: initial !important

  $project-transform-duration = 450ms
  $project-opacity-duration = 750ms

  $site-title-width = 185px

  // ******************************************************

  // HEADER

  #site-title
    transform: translateX(50vw) translateX(-($site-title-width / 2))
    transition: transform $project-transform-duration ease-in

  body.project-open
    #site-title
      transform: translateX(9vw) translateX($gutter)

  // ******************************************************

  // PROJECT LIST

  #project-list
    min-height: calc('100vh - ' + $margin-extra)

  // ******************************************************

  // PROJECT

  #project
    transition: transform $project-transform-duration ease-out

  #project-wrapper,
  #project-close-overlay
    transition: opacity $project-opacity-duration ease-out

  body.project-open
    #project
      transform: translateX(9vw)

  make-browser-frames(18px, 28px, $margin-micro)

  #project-list
    min-height: calc('100vh - ' + $margin-extra)

  // ******************************************************

  // FOOTER

  body.contact-stuck
    #contact
      color: transparent
      pointer-events: none
    #footer
      .contact-item
        pointer-events: auto
        // color defined in <head>

  #contact
    display: block
    position: fixed
    bottom: 0
    left: 0
    width: 100%

  #footer
    .contact-item
      color: transparent
      pointer-events: none
